<h1>Ask your coach a question</h1>

<%= form_with url: answer_path, method: :get, local: true do %>
  <div class="form-group">
    <%= label_tag :question, "Your Question:" %>
    <%= text_field_tag :question, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Ask", class: "btn btn-primary" %>
  </div>
<% end %>
